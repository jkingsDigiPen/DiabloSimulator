<Window x:Class="DiabloSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiabloSimulator"
				xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Diablo Simulator" Height="200" Width="250">
	<Window.Resources>
		<sys:String x:Key="strWindow">Hello, Window world!</sys:String>
	</Window.Resources>
	<Grid Background="LightBlue">

		<StackPanel HorizontalAlignment="Center" Margin="10">
			<TextBlock TextWrapping="Wrap">
				Welcome to the Diablo Simulator! Please choose a class:
			</TextBlock>
			<DockPanel>
				<StackPanel Margin="10" DockPanel.Dock ="Top">
					<RadioButton>Warrior</RadioButton>
					<RadioButton>Rogue</RadioButton>
					<RadioButton>Sorcerer</RadioButton>
				</StackPanel>
				<Button DockPanel.Dock ="Bottom" Name="btnClickMe" Click="btnClickMe_Click">Enter the world of Sanctuary!</Button>
			</DockPanel>
		</StackPanel>
	</Grid>
</Window>
