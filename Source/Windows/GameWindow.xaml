<Window x:Class="DiabloSimulator.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:Controls="clr-namespace:DiabloSimulator.UserControls"
        mc:Ignorable="d"
        Title="Diablo Simulator"
				SizeToContent="WidthAndHeight" Loaded="Window_Loaded"
				Style="{StaticResource CustomWindowStyle}">
	<!-- MASTER PANEL -->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="150"/>
			<RowDefinition Height="200"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<!-- UPPER LEFT PANEL -->
		<Border Grid.Column="0" Grid.Row="0">
			<Grid>
				<!-- Grid Format -->
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="auto"/>
				</Grid.RowDefinitions>
				<!-- Content -->
				<Label Grid.Row="0" HorizontalAlignment="Center" FontSize="20" 
						 FontWeight="SemiBold">Character</Label>
				<Controls:HeroStatDisplay x:Name="ctrlStats" Grid.Row="1"/>
				<Grid Grid.Row="2">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="auto"/>
						<RowDefinition Height="auto"/>
					</Grid.RowDefinitions>
					<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" FontSize="16" 
							 FontWeight="SemiBold">Offense</Label>
					<Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">100</Label>
					<Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" FontSize="16" 
							 FontWeight="SemiBold">Defense</Label>
					<Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">48</Label>
				</Grid>
			</Grid>
		</Border>

		<!-- UPPER RIGHT PANEL -->
		<Border Grid.Column="1" Grid.Row="0">
			<Grid>
				<!-- Grid Format -->
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<!-- Equipment Panel -->
				<Controls:HeroEquipmentDisplay Grid.Row="0" x:Name="ctrlEquipment"/>
				<!-- Inventory Panel -->
				<Controls:HeroInventoryDisplay Grid.Row="1" x:Name="ctrlInventory"/>
			</Grid>
		</Border>

		<!-- MID LEFT PANEL -->
		<Border Grid.Column="0" Grid.Row="1">
			<Grid>
				<!-- Grid Format -->
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<!-- Content -->
				<Label Grid.Row="0" HorizontalAlignment="Center" FontSize="18" 
							 FontWeight="SemiBold">Health</Label>
				<Label Name="lblHealth" Grid.Row="1" HorizontalAlignment="Center" FontSize="16">
					<TextBlock>
						<TextBlock.Text>
							<MultiBinding StringFormat="{}{0} / {1}">
								<Binding Path="HeroStats.ModifiedValues[CurrentHealth]" UpdateSourceTrigger="PropertyChanged"/>
								<Binding Path="HeroStats.ModifiedValues[MaxHealth]" UpdateSourceTrigger="PropertyChanged"/>
							</MultiBinding>
						</TextBlock.Text>
					</TextBlock>
				</Label>
				<Label Grid.Row="2" HorizontalAlignment="Center" FontSize="14">
					<TextBlock Text="{Binding HeroPotions, StringFormat={}{0} potions remaining}"></TextBlock>
				</Label>
				<Button Grid.Row="3" Name="btnUsePotion">Use Potion</Button>
			</Grid>
		</Border>
		
		<!-- MID RIGHT PANEL -->
		<Border Grid.Column="1" Grid.Row="1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Label Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" FontSize="18" 
							 FontWeight="SemiBold">Weapon</Label>
				<Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center">Dirk</Label>
				<Label Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">Dagger (common)</Label>
				<Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center">2 - 5 fire damage</Label>
				<Label Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center">10% critical hit chance</Label>
			</Grid>
		</Border>
		
		<!-- LOWER LEFT PANEL -->
		<Border Grid.Column="0" Grid.Row="2">
			<Grid>
				<!-- Grid Format -->
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<!-- Content -->
				<Label Grid.Row="0" HorizontalAlignment="Center" FontSize="18" 
						 FontWeight="SemiBold">Monster Stats</Label>
				<Label Grid.Row="1" HorizontalAlignment="Center">Fallen Shaman</Label>
				<Label Grid.Row="2" HorizontalAlignment="Center">(Common)</Label>
				<Label Grid.Row="3" HorizontalAlignment="Center">76% Health</Label>
			</Grid>
		</Border>

		<!-- LOWER RIGHT PANEL -->
		<Border Grid.Column="1" Grid.Row="2">
			<Grid>
				<!-- Grid Format -->
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<!-- Content -->
				<Label Grid.Row="0" HorizontalAlignment="Center" FontSize="18" 
						 FontWeight="SemiBold">Events</Label>
				<ScrollViewer Grid.Row="1" Name="svEvents">
					<ListBox Name="lbEvents"></ListBox>
				</ScrollViewer>
			</Grid>
		</Border>

		<!-- LOWEST LEFT PANEL -->
		<Border Grid.Column="0" Grid.Row="3">
			<Grid>
				<!-- Grid Format -->
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<!-- Content -->
				<Label Grid.Column="0" HorizontalAlignment="Center" FontSize="16">300 Exp until next level</Label>
			</Grid>
		</Border>

		<!-- LOWEST RIGHT PANEL -->
		<Border Grid.Column="1" Grid.Row="3">
			<Grid>
				<!-- Grid Format -->
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<!-- Content -->
				<Button Grid.Column="0" Name="btnExploreAttack">Explore / Attack</Button>
				<Button Grid.Column="1" Name="btnDefend">Defend</Button>
				<Button Grid.Column="2" Name="btnFleeTown">Flee / Town Portal</Button>
			</Grid>
		</Border>
	</Grid>
</Window>
